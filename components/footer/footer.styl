.footer
    padding: 0 80px
    background-image: url('/static/bg-footer.jpg')
    background-repeat-y: no-repeat
    color: #fff
    font-family: Arial, sans-serif

    &__content
        max-width: 1200px
        min-width: 800px
        margin: 0 auto
        padding: 50px 0
        display: flex

    &__section
        width: 400px
        margin-right: 40px

    &__title
        font-size: 14px
        font-weight: bold
        text-transform: uppercase
        margin: 0

    &__socmedia
        margin: 10px 0 0
        padding: 0
        list-style-type: none

    &__socmedia a
        color: inherit
        text-decoration: none
        display: inline-block
        width: 50px
        text-align: center
        line-height: 40px
        font-size: 20px
        margin-right: 10px

    &__socmedia-item
        display: inline-block

    &__socmedia-item_type_vk a
        background-color: #007bb5

    &__socmedia-item_type_facebook a
        background-color: #3b5998

    &__socmedia-item_type_instagram a
        background-color: #8d2f56

    &__contacts
        margin: 10px 0 0
        padding: 0
        list-style-type: none

    &__contacts li
        margin-top: 10px
        font-size: 12px

    &__contacts a
        color: inherit
        text-decoration: none
