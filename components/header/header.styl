.header
    padding: 0 80px
    background-image: url('/static/menu-bg.jpg')
    background-repeat-y: no-repeat

    &__content
        max-width: 1200px
        min-width: 800px
        height: 52px
        margin: 0 auto
        padding: 4px 0
        display: flex
        align-items: center

    &__logo
        display: inline-block
        height: 100%

    &__menu
        margin: 0
        padding: 0
        font-size: 16px
        color: #f5f5f5
        text-transform: uppercase
        letter-spacing: 1px
        flex-grow: 1
        flex-shrink: 0

        li
            list-style-type: none
            display: inline-block
            margin-left: 30px

        a
            color: inherit
            text-decoration: none

    a&__menu-item_active
        color: #fff
        font-weight: bold
        cursor: default

    &__contacts
        flex-grow: 0
        font-size: 13px
        font-weight: bold
        color: #fff
        margin-left: 30px

        a
            color: inherit
            text-decoration: none

    &__contact_type_map
        margin-top: 8px
